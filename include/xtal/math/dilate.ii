template <int N_two=0, int N_tau=0>
struct dilate
{
	template <class S>
	class subtype: public bond::compose_s<S>
	{
		using S_ = bond::compose_s<S>;

	public:
		using S_::S_;

		template <auto ...Is>
		XTAL_FN2 function(auto &&o)
		XTAL_0EX
		{
			using re = bond::realize<decltype(o)>;
			auto constexpr n = re::diplo_f(-N_two)*re::template patio_f<-N_tau>(2, 1);
			auto constexpr u = re::diplo_f(+N_two)*re::template patio_f<+N_tau>(2, 1);
			return S_::template function<Is...>(o*n)*(u);
		};

	};
};
template <>
struct dilate<0>
{
	template <class S>
	using subtype = S;

};


